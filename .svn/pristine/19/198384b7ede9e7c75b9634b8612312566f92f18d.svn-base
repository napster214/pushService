body,div,table,td,tr,ul,li,dl,dt,dd,p,span,h3,h4,h1,h2,b,em,a,input,img,label,form{margin:0;padding: 0; font-size:12px; font-family:Arial, Helvetica, sans-serif;}
body{background:#386698 ;overflow-x:hidden;}
.fl{float:left;display:inline;}
.fr{float:right;display:inline;}
.clear{clear:both;}
ul,li{list-style:none;}
b,em{font-style:normal;}
a{color:#000; text-decoration: none;}
a:hover{color:red;}
.j10{height:10px; width:100%;overflow:hidden;*zoom:1;} 
.jgb{width:3.5%; height:10px;} 
/*bottom jg*/
.foot{width:100%; height:25px;}

html, body {
	overflow-x:hidden;
	overflow-y:auto;
	margin:0; padding:0;
}
html, body {
	overflow-x:hidden;
	scrollbar-arrow-color:#fbfff1;
	scrollbar-face-color:#8cc6f6;
	scrollbar-track-color:#E8E8E8;
	scrollbar-darkshadow-color:#ffffff;
	scrollbar-3dlight-color:#4277BB;
	
	scrollbar-face-color: #a5d4ee; 
scrollbar-shadow-color: #dddce1; 
scrollbar-highlight-color: #fdfdff; 
scrollbar-3dlight-color: #3b7cb2; 
scrollbar-darkshadow-color: #3b7cb2; 
scrollbar-track-color: #d7effb; 
scrollbar-arrow-color: #35709c;
	
}

/* 设置滚动条的样式 */
::-webkit-scrollbar {
    width: 12px;
}
/* 滚动槽 */
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 10px;
}
/* 滚动条滑块 */
::-webkit-scrollbar-thumb {
    border-radius: 5px;
    background: rgba(0,0,0,0.1);
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}
::-webkit-scrollbar-thumb:window-inactive {
    background: rgba(255,0,0,0.4);
}

h3 em{
	margin-left:10px;
}